{
  "name": "recipepage",
  "version": "1.0.0",
  "description": "This challenge will help you focus on writing semantic HTML. Ensure you think through what HTML elements are most appropriate for each piece of content.",
  "keywords": [
    "Frontend",
    "Development",
    "Pug",
    "SCSS",
    "Frontend",
    "Mentor"
  ],
  "homepage": "https://github.com/hanifmaleki/Recipe-Page#readme",
  "bugs": {
    "url": "https://github.com/hanifmaleki/Recipe-Page/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanifmaleki/Recipe-Page.git"
  },
  "license": "ISC",
  "author": "Hanif Maleki",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "sass src/scss:dist/css",
    "scss:build": "sass src/scss:dist/css --style=compressed",
    "pug": "node build-pug.js",
    "copy-js-assets": "copy-files-from-to --when-file-exists overwrite",
    "watch": "concurrently 'node chokidar.js' 'live-server dist'",
    "build": "npm run scss:build && npm run pug && npm run copy-js-assets"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "copy-files-from-to": "^3.12.1",
    "i18next": "^25.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.93.2"
  },
  "devDependencies": {
    "i18next-parser": "^9.0.2"
  },
  "copyFiles": [
    {
      "from": "src/js",
      "to": "dist"
    },
    {
      "from": "assets",
      "to": "dist/assets"
    }
  ]
}
